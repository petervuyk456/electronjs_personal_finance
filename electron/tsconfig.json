{
  "compilerOptions": {
    // Allow js files
    "allowJs": true,
    // base directory for non-relative module imports
    "baseUrl": ".",
    // error check js files
    "checkJs": true,
    // Allow default imports from non-ES modules
    "esModuleInterop": true,
    // Compile Jsx to react code (React.createElement calls)
    // Use "preserve" if we want to add a separate jsx compiler
    "jsx": "react",
    // Use node style resolution for node_module imports
    "moduleResolution": "node",
    // Output directory for compiled js
    "outDir": "dist",
    // Mappings to modules from the base url
    "paths": {
      "*": ["node_modules/*"],
      // Webpack alias paths
      "rendererUtils/*": ["src/renderer/utils/*"],
      "mainUtils/*": ["src/main/utils/*"],
      "shared/*": ["src/shared/*"],
      "sharedUtils/*": ["src/shared/utils/*"],
      "css/*": ["src/css/*"],
      "assets/*": ["src/assets/*"],
    },
    // Remove comments from compiled js
    "removeComments": true,
    // Allow .json modules
    "resolveJsonModule": true,
    // Map compiled JS to TS for TS debugging
    "sourceMap": true,
    // Enable all strict type checking settings ,including:
    //  - noImplicitAny
    //  - noImplicitThis
    //  - alwaysStrict
    //  - strictBindCallApply
    //  - strictNullChecks
    //  - strictFunctionTypes
    //  - strictPropertyInitialization
    "strict": true,
    // Target latest supported version of ECMAScript
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
}